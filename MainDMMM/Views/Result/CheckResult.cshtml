@model MainDMMM.Models.Entities.SchoolPortalData

@{
    ViewBag.Title = "CheckResult";

}





<div class="" style="background-color:#3c8dbc;padding:10px;color:#ffffff;">
    <h3 style="text-align:center;">Check Result</h3>
</div>

<div class="container">
    @if (Model != null)
    {
        <div class="row" style="margin-top:10px;">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="panel" style="box-shadow:1px 1px 1px #3c8dbc;border:1px solid #3c8dbc;">
                    <div class="panel-body text-center">
                       
                        <h3>@Model.SchoolName</h3>
                        <h5>@Model.SchoolAddress</h5>

                        <br />
                        <a href="http://@ViewBag.link" target="_blank"><button class="btn btn-primary">click to check result</button></a>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>

    }
    else
    {
        <div class="row" style="margin-top:10px;">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="panel" style="box-shadow:1px 1px 1px #3c8dbc;border:1px solid #3c8dbc;">
                    <div class="panel-body text-center">
                        <h3 class="" style="text-wrap:normal;">Choose Your School</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>

    }





    <div class="clearfix"></div>

    <div class="">
        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-4">

                </div>
                <div class="col-md-4">

                    <div class="form-group">
                        <label>Select Your School</label>
                        <div class="">
                            @Html.DropDownList("url", ViewBag.School as SelectList, "Select School", new { id = "", @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Preview</button>
                    </div>
                </div>
                <div class="col-md-4">

                </div>
            }
        </div>
    </div>
</div>



