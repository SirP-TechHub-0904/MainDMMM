@model IEnumerable<MainDMMM.Models.Entities.Subsection>

@{
    ViewBag.Title = "SubsectionIndex";
}

<h2>SubsectionIndex</h2>

<p>
    @Html.ActionLink("Create New", "SubsectionCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Section.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameOfSection)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebsiteUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckResultUrl)
        </th> 
        <th>
            img
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Section.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameOfSection)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebsiteUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckResultUrl)
        </td>
        <td>
            @if (item.SchoolLogo != null)
            {
                <img src="data:image/jpg;base64,@(Convert.ToBase64String(item.SchoolLogo))" class="img-responsive" style="width:150px;" />

            }
        </td>
        <td>
            @Html.ActionLink("Edit", "SubsectionEdit", new { id=item.Id }) |
            @Html.ActionLink("Details", "SubsectionDetails", new { id=item.Id }) |
            @Html.ActionLink("Delete", "SubsectionDelete", new { id=item.Id })
        </td>
    </tr>
}

</table>
